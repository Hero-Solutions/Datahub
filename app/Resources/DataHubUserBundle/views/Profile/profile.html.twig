{% extends 'DataHubUserBundle:Default:layout.html.twig' %}

{% set page_title = 'users.adduser' | trans({}, 'FOSUserBundle') %}

{% block content %}

    <div class="panel panel-primary">

        <div class="panel-heading">
            <div class="btn-group pull-right">
                <a href="{{ path('datahub_user_users_edit', { id: user.getId() }) }}" class="btn btn-xs btn-default">
                    <i class="fa fa-pencil"></i> {{ 'Edit user' | trans }}
                </a>
                <a href="{{ path('datahub_user_users_delete', { id: user.getId() }) }}" class="btn btn-xs btn-danger">
                    <i class="fa fa-plus"></i> {{ 'Delete user' | trans }}
                </a>
            </div>

            <h3 class="panel-title">
                <i class="fa fa-user"></i>
                {{ 'Profile' | trans }}: {{ user.getUsername() }}
            </h3>
        </div>

        <div class="panel-body">

            <dl>
                <dt>{{ 'Username' | trans }}</dt>
                <dd>{{ user.getUsername() }}</dd>
                <dt>{{ 'Full name' | trans }}</dt>
                <dd>{{ user.getFirstName() }} {{ user.getLastName() }}</dd>
                <dt>{{ 'E-mail' | trans }}</dt>
                <dd>{{ user.getEmail() }}</dd>
                <dt>{{ 'Roles' | trans }}</dt>
                <dd>{{ user.getRoles() | join('<br>') | raw }}</dd>
            </dl>
            </div>
        </div>

        {{ include('DataHubOAuthBundle:Clients:index.html.twig', { 'clients': clients }) }}


    </div>

{% endblock content %}