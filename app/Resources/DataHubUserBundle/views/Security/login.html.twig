{% extends 'DataHubUserBundle::layout.html.twig' %}

{% set page_title = 'Login' | trans({}, 'FOSUserBundle') %}

{% block content %}

{% if error %}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>{{ error.messageKey | trans(error.messageData, 'FOSUserBundle') }}</strong>
    </div>
{% endif %}

    {{ form_start(form) }}
        <div class="form-group input-group">
            {{ form_row(form._username) }}
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
        </div>
        <div class="form-group input-group">
            {{ form_row(form._password) }}
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
        </div>
        <button type="submit" class="btn btn-success">Login <span class="fa fa-lock"></span></button>
    {{ form_end(form) }}

{% endblock %}
