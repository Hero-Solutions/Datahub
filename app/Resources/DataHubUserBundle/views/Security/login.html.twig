{% extends 'DataHubUserBundle::layout.html.twig' %}

{% set page_title = 'layout.login' | trans({}, 'FOSUserBundle') %}

{% block content %}
{% if error %}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>{{ error.messageKey | trans(error.messageData, 'FOSUserBundle') }}</strong>
    </div>
{% endif %}

    {{ form_start(form) }}
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}
        <button type="submit" class="btn btn-success">Login <span class="fa fa-lock"></span></button>
    {{ form_end(form) }}

{% endblock %}
