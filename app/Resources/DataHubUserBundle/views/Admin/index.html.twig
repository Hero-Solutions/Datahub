{% extends 'DataHubUserBundle:Default:layout.html.twig' %}

{% set page_title = 'users.user' | trans({}, 'FOSUserBundle') %}

{% block content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'Users' | trans }}
            </h3>

            <a href="{{ path('datahub_user_users_add') }}" class="btn btn-xs btn-default">
                <i class="fa fa-plus"></i> {{ 'New user' | trans }}
            </a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'Username' | trans }}</th>
                    <th>{{ 'Email' | trans }}</th>
                    <th>{{ 'Roles' | trans }}</th>
                    <th>{{ 'Enabled?' | trans }}</th>
                    <th>{{ 'Actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <a href="{{ path('datahub_user_users_show', { id: user.getId() }) }}">
                                {{ user.getUsername() }}
                            </a>
                        </td>
                        <td>{{ user.getEmail() }}</td>
                        <td>{{ user.getRoles() | join('<br>') | raw }}</td>
                        <td>
                            {% if user.getEnabled() %}
                                {{ 'Yes' | trans }}
                            {% else %}
                                {{ 'No' | trans }}
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('datahub_user_users_edit', { id: user.getId() }) }}" class="btn btn-xs btn-default">
                                    <i class="fa fa-pencil"></i> {{ 'edit' | trans }}
                                </a>
                                <a href="{{ path('datahub_user_users_delete', { id: user.getId() }) }}" class="btn btn-xs btn-default">
                                    <i class="fa fa-times"></i> {{ 'Delete' | trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">
                            {{ 'No results found.' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}