{% extends 'DataHubUserBundle::Layouts:default.html.twig' %}

{% set page_title = 'users.user' | trans({}, 'FOSUserBundle') %}

{% block content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="btn-group pull-right">
                <a href="{{ path('datahub_user_users_add') }}" class="btn btn-xs btn-default">
                    <i class="fa fa-plus"></i> {{ 'New user' | trans }}
                </a>
            </div>

            <h3 class="panel-title">
                <i class="fa fa-user fa-fw"></i>
                {{ 'Users' | trans }}
            </h3>
        </div>
        <table class="table table-striped users">
            <thead>
                <tr>
                    <th>{{ 'Username' | trans }}</th>
                    <th>{{ 'Email' | trans }}</th>
                    <th>{{ 'Roles' | trans }}</th>
                    <th>{{ 'Enabled?' | trans }}</th>
                    <th>{{ 'Actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="user" id="user-{ id: user.getId() }">
                        <td class="username">
                            <a href="{{ path('datahub_user_users_show', { id: user.getId() }) }}">
                                {{ user.getUsername() }}
                            </a>
                        </td>
                        <td class="email">{{ user.getEmail() }}</td>
                        <td class="roles">{{ user.getRoles() | join('<br>') | raw }}</td>
                        <td class="enabled">
                            {% if user.getEnabled() %}
                                {{ 'Yes' | trans }}
                            {% else %}
                                {{ 'No' | trans }}
                            {% endif %}
                        </td>
                        <td class="actions">
                            <div class="btn-group">
                                <a href="{{ path('datahub_user_users_edit', { id: user.getId() }) }}" class="btn btn-xs btn-default">
                                    <i class="fa fa-pencil"></i> {{ 'edit' | trans }}
                                </a>
                                <a href="{{ path('datahub_user_users_delete', { id: user.getId() }) }}" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i> {{ 'delete' | trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">
                            {{ 'No results found.' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}