{% set page_title = 'Clients' | trans %}

{% block content %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="btn-group pull-right">
                <a href="{{ path('datahub_oauth_clients_add') }}" class="btn btn-xs btn-default oauth-clients-add-client">
                    <i class="fa fa-plus"></i> {{ 'New client' | trans }}</a>
                </a>
            </div>

            <h3 class="panel-title">
                <i class="fa fa-cloud-upload"></i>
                {{ 'OAuth Clients' | trans }}
            </h3>
        </div>
        <table class="table table-striped oauth-clients">
            <thead>
                <tr>
                    <th>{{ 'Application name' | trans }}</th>
                    <th>{{ 'Allowed grant types' | trans }}</th>
                    <th>{{ 'Created' }}</th>
                    <th>{{ 'Actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>

                        <td class="applicationname">
                            <a href="{{ path('datahub_oauth_clients_show', { applicationName: client.getApplicationName() }) }}">
                                {{ client.getApplicationName() }}
                            </a>
                        </td>
                        <td class="allowedgranttypes">{{ client.getAllowedGrantTypes() | join(', ') | raw }}</td>
                        <td class="createdat">{{ client.getCreatedAt() | date("d M Y H:m") }}</td>
                        <td class="actions">
                            <div class="btn-group">
                                <a href="{{ path('datahub_oauth_clients_edit', { id: client.getId() }) }}" class="btn btn-xs btn-default oauth-clients-edit-client">
                                    <i class="fa fa-pencil"></i> {{ 'Edit' | trans }}
                                </a>
                                <a href="{{ path('datahub_oauth_clients_delete', { applicationName: client.getApplicationName() }) }}" class="btn btn-xs btn-danger oauth-clients-delete-client">
                                    <i class="fa fa-trash"></i> {{ 'Delete' | trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">
                            {{ 'No results found.' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
