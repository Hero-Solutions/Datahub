{% extends 'FOSUserBundle::layout.html.twig' %}

{% set page_title = 'resetting.request.submit' | trans({}, 'FOSUserBundle') %}

{% block content %}
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
    {% if invalid_username is defined %}
        <div class="alert alert-danger">
            {{ 'resetting.request.invalid_username' | trans({ '%username%': invalid_username }, 'FOSUserBundle') }}
        </div>
    {% endif %}

    <div class="form-group input-group">
        <input type="text" class="form-control" id="username" name="username" placeholder="{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}" required="required">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
    </div>

    <div class="clearfix">
        <input type="submit" class="btn btn-default" value="{{ 'resetting.request.submit' | trans({}, 'FOSUserBundle') }}">

        <a href="{{ path('fos_user_security_login') }}" class="btn btn-link pull-right">
            <i class="fa fa-chevron-circle-left"></i> {{ 'Back' | trans }}
        </a>
    </div>
</form>
{% endblock %}
