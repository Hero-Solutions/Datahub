{% extends 'FOSUserBundle::layout.html.twig' %}

{% set page_title = 'layout.login' | trans({}, 'FOSUserBundle') %}

{% block content %}
{% if error %}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>{{ error.messageKey | trans(error.messageData, 'FOSUserBundle') }}</strong>
    </div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="POST">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
    <input type="hidden" name="_timezone" class="login-timezone" value="">
    <div class="form-group input-group">
        <input type="text" autofocus class="form-control" id="username" name="_username" placeholder="{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}" value="{{ last_username }}" required="required">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
    </div>
    <div class="form-group input-group">
        <input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" required="required">
        <span class="input-group-addon"><i class="fa fa-key"></i></span>

    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="1"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
        </label>
    </div>
    <div>
        <button type="submit" name="_submit" id="submit" class="btn btn-primary">
            {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }} <i class="fa fa-chevron-circle-right"></i>
        </button>

        <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-link pull-right">
            {{ 'resetting.request.submit' | trans({}, 'FOSUserBundle') }}
        </a>
    </div>
</form>
{% endblock %}
