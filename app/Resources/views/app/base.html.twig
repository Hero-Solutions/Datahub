<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% if page_title is defined %}{{ page_title }} &middot; {% endif%}{% if section_title is defined %}{{ section_title }} &mdash; {% endif %}{{ service_name }}</title>

{% block stylesheets %}
    <link rel="shortcut icon" href="{{ asset('assets/favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
{% endblock stylesheets %}

</head>
<body>
  <div id="wrap">

    {% include 'app/topnav.html.twig' %}

    <div class="container-fluid">  
      <div class="row">
          <div class="col-md-12">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}
            {% block body %}{% endblock %}
          </div>
      </div>
    </div>

    <div id="push"></div>

  </div>

  <div id="footer">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <p>Powered by <a href="https://github.com/thedatahub/datahub">The Datahub</a></p>
          </div>
        </div>
      </div>
  </div>

{% block javascripts %}
    <!-- Custom JS -->
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock javascripts %}

{% block modals %}{% endblock modals %}

</body>
</html>
