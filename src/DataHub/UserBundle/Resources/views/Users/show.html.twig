{% extends 'DataHubUserBundle:Default:layout.html.twig' %}

{% set page_title = 'User: %entity%' | trans({ '%entity%': entity }) %}

{% block content %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'User: %entity%' | trans({ '%entity%': entity }) }}
            </h3>
        </div>
        <table class="table table-striped">
            <tr>
                <th>{{ 'ID' | trans }}</th>
                <td>{{ entity.getId() }}</td>
            </tr>
            <tr>
                <th>{{ 'Username' | trans }}</th>
                <td>{{ entity.getUsername() }}</td>
            </tr>
            <tr>
                <th>{{ 'Email' | trans }}</th>
                <td>{{ entity.getEmail() }}</td>
            </tr>
            <tr>
                <th>{{ 'Roles' | trans }}</th>
                <td>{{ entity.getRoles() | join('<br>') | raw }}</td>
            </tr>
            <tr>
                <th>{{ 'Enabled' | trans }}</th>
                <td>{% include 'DataHubSharedBundle:Partials:boolean.checkbox.html.twig' with {value: entity.getEnabled()} %}</td>
            </tr>
            <tr>
                <th>{{ 'Last login' | trans }}</th>
                <td>{% include 'DataHubSharedBundle:Partials:datetime.relative.html.twig' with {value: entity.getLastLogin()} %}</td>
            </tr>
        </table>
        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-8">
                    <div class="btn-group">
                        <a href="{{ path('datahub_user_users_index') }}" class="btn btn-default">
                            <i class="fa fa-angle-double-left"></i> {{ 'Back' | trans }}
                        </a>
                        <a href="{{ path('datahub_user_users_edit', { id: entity.getId() }) }}" class="btn btn-default">
                            <i class="fa fa-edit"></i> {{ 'Edit' | trans }}
                        </a>
                    </div>
                </div>
                <div class="col-xs-4 text-right">
                    <div class="btn-group">
                        <a href="{{ path('datahub_user_users_delete', { id: entity.getId() }) }}" class="btn btn-danger" onclick="return confirm('{{ 'Are you sure?' | trans }}')">
                            <i class="fa fa-trash"></i> {{ 'Delete' | trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
