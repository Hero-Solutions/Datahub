{% extends 'VKCDataHubUserBundle:Default:layout.html.twig' %}

{% set page_title = 'Users' | trans %}

{% block content %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'Users' | trans }}

                (<a href="{{ path('vkc_datahub_user_users_new') }}">{{ 'add' | trans }}</a>)
            </h3>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'Username' | trans }}</th>
                    <th>{{ 'Email' | trans }}</th>
                    <th>{{ 'Roles' | trans }}</th>
                    <th>{{ 'Last login' | trans }}</th>
                    <th>{{ 'Enabled' | trans }}</th>
                    <th>{{ 'Actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.getUsername() }}</td>
                        <td>{{ entity.getEmail() }}</td>
                        <td>{{ entity.getRoles() | join('<br>') | raw }}</td>
                        <td>{% include 'VKCDataHubSharedBundle:Partials:datetime.relative.html.twig' with {value: entity.getLastLogin()} %}</td>
                        <td>{% include 'VKCDataHubSharedBundle:Partials:boolean.checkbox.html.twig' with {value: entity.getEnabled()} %}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('vkc_datahub_user_users_show', { id: entity.getId() }) }}" class="btn btn-xs btn-default">
                                    <i class="fa fa-eye"></i> {{ 'View' | trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">
                            {{ 'No results found.' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
