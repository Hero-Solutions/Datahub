{% if value %}
    <time
        data-toggle="tooltip"
        title="{{ value | date('r') }}"
        datetime="{{ value | date('c') }}"
        class="timeago">
        {{ value | date('Y-m-d H:i:s T') }}
    </time>
{% else %}
    <span class="label label-warning">
        <i class="fa fa-times"></i>
    </span>
{% endif %}
